<%- include('partials/header'); -%>

<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">  Login</h1>
      <%- include('partials/messages'); -%> 
      <form action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email" class="font-weight-bold lead">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email Address"
          />
        </div>

        <div class="form-group">
          <label for="password" class="font-weight-bold lead">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary submit_btn">Login</button>
      </form>
      <div class="row mt-4 text-center">
        <div class="col-md-6">
          <p class="lead">
            No Account yet? <a href="/auth/signup">Register</a>
          </p>
        </div>
        <div class="col-md-6">
          <p class="lead">
            Return to <a href="/">Home</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer'); -%>